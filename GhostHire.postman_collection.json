{
  "info": {
    "name": "GhostHire API Test Suite",
    "description": "End-to-end test suite for GhostHire backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8000" },
    { "key": "token", "value": "" },
    { "key": "job_id", "value": "" },
    { "key": "resume_id", "value": "" }
  ],
  "item": [

    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{base_url}}/api/v1/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@test.com\",\n  \"password\": \"123456\",\n  \"full_name\": \"Test User\"\n}"
        }
      }
    },

    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/x-www-form-urlencoded" }],
        "url": "{{base_url}}/api/v1/auth/login",
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "username", "value": "test@test.com" },
            { "key": "password", "value": "123456" }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "pm.environment.set('token', json.access_token);"
            ]
          }
        }
      ]
    },

    {
      "name": "Resume - Upload",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{base_url}}/api/v1/resumes/",
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": "resume.pdf"
            }
          ]
        }
      }
    },

    {
      "name": "Resume - List",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{base_url}}/api/v1/resumes/"
      }
    },

    {
      "name": "Jobs - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{base_url}}/api/v1/jobs/",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Backend Engineer\",\n  \"company\": \"GhostCorp\",\n  \"location\": \"Remote\",\n  \"description\": \"Build scalable APIs\"\n}"
        }
      }
    },

    {
      "name": "Jobs - List",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{base_url}}/api/v1/jobs/"
      }
    },

    {
      "name": "Applications - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{base_url}}/api/v1/applications/",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"job_id\": 1,\n  \"status\": \"applied\"\n}"
        }
      }
    },

    {
      "name": "Applications - List",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{base_url}}/api/v1/applications/"
      }
    },

    {
      "name": "AI - Optimize Resume",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{base_url}}/api/v1/ai/optimize-resume",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"resume_text\": \"Experienced backend developer\",\n  \"job_description\": \"Looking for Python developer\"\n}"
        }
      }
    }

  ]
}
